{
  "name": "node-arweave-wallet",
  "type": "module",
  "version": "0.0.8",
  "packageManager": "pnpm@10.17.1",
  "description": "Use Arweave browser wallets (Wander or any other compatible wallet) from Node.js applications. Perfect for CLI tools and scripts that need secure wallet interactions without exposing private keys.",
  "author": "Pawan Paudel <pawanpaudel93@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/pawanpaudel93",
  "homepage": "https://github.com/pawanpaudel93/node-arweave-wallet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawanpaudel93/node-arweave-wallet.git"
  },
  "bugs": "https://github.com/pawanpaudel93/node-arweave-wallet/issues",
  "keywords": [
    "arweave",
    "wallet",
    "browser-wallet",
    "wander",
    "arweave-wallet",
    "nodejs",
    "cli",
    "signing",
    "transaction",
    "aoconnect",
    "permaweb",
    "ans-104",
    "data-item",
    "crypto",
    "blockchain"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src/signer.html",
    "src/signer.js"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@dha-team/arbundles": "catalog:",
    "arweave": "catalog:",
    "kill-port": "catalog:",
    "nanoid": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/kill-port": "catalog:",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "html-minifier-terser": "catalog:",
    "lint-staged": "catalog:cli",
    "prettier": "catalog:",
    "simple-git-hooks": "catalog:cli",
    "terser": "catalog:",
    "tinyexec": "catalog:testing",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
